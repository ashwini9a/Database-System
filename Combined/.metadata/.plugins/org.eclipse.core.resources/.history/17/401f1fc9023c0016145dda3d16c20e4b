			}
		}
		String type= words[0].toLowerCase();
		switch(type)
		{
		case "select":
			selectValidation(words);
			break;
		case "update":
			break;
		case "insert":
			break;
		case "create":
			break;
		case "delete":
			break;
		default:
			JOptionPane.showMessageDialog(null, "Invalid database operation", "Error", JOptionPane.ERROR_MESSAGE);
		}
			
	}
